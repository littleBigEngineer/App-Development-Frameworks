package com.kylar.RowMapper;

import java.sql.ResultSet;
import java.sql.SQLException;

import org.springframework.jdbc.core.RowMapper;

import com.kylar.Domain.Equipment;
import com.kylar.Domain.ShopItem;

public class ShopItemMapper implements RowMapper<ShopItem> {
	@Override
	public ShopItem mapRow(ResultSet rs, int i) throws SQLException {
		return new Equipment(rs.getString("item"), rs.getString("material"), 
				rs.getInt("protection"), rs.getInt("damage"), rs.getInt("durability"),
				rs.getInt("currentLevel"), rs.getInt("priceForUpgrade"), rs.getInt("beSold"), 
				rs.getInt("salePrice"));
	}
}
